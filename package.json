{
  "name": "node-starter-jumpstart",
  "version": "1.0.0",
  "description": "Jumpstart script for the node-starter project",
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "detect-secrets": "cross-env-shell docker run --rm -v ${INIT_CWD}:/code ibmcom/detect-secrets-hook:0.13.1.ibm.48.dss --baseline .secrets.baseline",
    "detect-secrets:update-baseline": "cross-env-shell docker run --rm -v ${INIT_CWD}:/code ibmcom/detect-secrets:0.13.1.ibm.48.dss scan --update .secrets.baseline",
    "prepare": "husky install",
    "prettier:fix": "prettier --write",
    "prettier:verify": "prettier --check .",
    "shellcheck": "shellcheck --severity=error",
    "test": "npm run test:snyk && npm run test:sonar",
    "test:snyk": "snyk test --dev",
    "test:snyk:monitor": "snyk monitor --dev",
    "test:sonar": "env-cmd -x sonar-scanner -D sonar.organization=\\$SONAR_ORGANIZATION -D sonar.projectKey=\\$SONAR_PROJECT_KEY -D sonar.login=\\$SONAR_TOKEN"
  },
  "lint-staged": {
    "*": "detect-secrets-hook --baseline .secrets.baseline",
    "*.sh": "npm run shellcheck",
    "*.{sh,md,yml,json}": "npm run prettier:fix",
    "package.json": [
      "typesync --silent",
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@commitlint/travis-cli": "^16.2.4",
    "@types/eslint": "^8.4.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/prettier": "^2.6.0",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-yml": "^0.14.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-check-updates": "^12.5.10",
    "prettier": "^2.6.2",
    "prettier-plugin-sh": "^0.10.1",
    "snyk": "^1.914.0",
    "sonarqube-scanner": "^2.8.1",
    "sort-package-json": "^1.55.0",
    "typesync": "^0.9.1"
  }
}
